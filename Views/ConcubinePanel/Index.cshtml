@model MvcOnlineTicariOtomasyon.Models.Classes.Concubine
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ConcubineLayout.cshtml";
}
<br />
<h2>Cari Bilgi Paneli</h2>

@using (Html.BeginForm("Index2", "ConcubinePanel", FormMethod.Post))
{
    <table class="table table-hover">
        <tr>
            <td><label>Mail Adresi: @HttpContext.Current.User.Identity.Name</label></td>
        </tr>
        <tr>
            <td>@Html.TextBoxFor(x => x.ConcubineName, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>@Html.TextBoxFor(x => x.ConcubineSurname, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>@Html.TextBoxFor(x => x.ConcubineCity, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>@Html.TextBoxFor(x => x.ConcubinePassword, new { @class = "form-control" })</td>
        </tr>
    </table>
    <button class="btn btn-warning">Bilgilerimi Güncelle</button>
}
