<input type="text" id="txt2" onkeyup="sum();" />
<input type="text" id="txt3" />*@

<script>
    function sum() {
        var number1 = document.getElementById('txt1').value;
        var number2 = document.getElementById('txt2').value;
        var result = parseFloat(number1).toFixed(2) * parseFloat(parseInt(number2)).toFixed(2);
        if (!isNaN(result)) {
            document.getElementById('txt3').value = parseFloat(result);
        }
    }
</script>