@model MvcOnlineTicariOtomasyon.Models.Classes.Product
@{
    ViewBag.Title = "ProductGet";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Ürün Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("ProductUpdate", "Product", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(p => p.ProductID)
        @Html.LabelFor(p => p.ProductName)
        @Html.TextBoxFor(p => p.ProductName, new { @class = "form-control" })
        <br />
        @Html.LabelFor(p => p.Brand)
        @Html.TextBoxFor(p => p.Brand, new { @class = "form-control" })
        <br />
        @Html.LabelFor(p => p.Stock)
        @Html.TextBoxFor(p => p.Stock, new { @class = "form-control" })
        <br />
        @Html.LabelFor(p => p.PurchhasePrice)
        @Html.TextBoxFor(p => p.PurchhasePrice, new { @class = "form-control" })
        <br />
        @Html.LabelFor(p => p.SalesPrice)
        @Html.TextBoxFor(p => p.SalesPrice, new { @class = "form-control" })
        <br />
        @Html.LabelFor(p => p.Category.CategoryID)
        @Html.DropDownListFor(p => p.CategoryId, (List<SelectListItem>)ViewBag.val, new { @class = "form-control" })
        @*@Html.TextBoxFor(p => p.CategoryId, new { @class = "form-control" })*@
        <br />
        @Html.LabelFor(p => p.ProductImage)
        @Html.TextBoxFor(p => p.ProductImage, new { @class = "form-control" })
        <br />
        @Html.LabelFor(p => p.Situation)
        @Html.TextBoxFor(p => p.Situation, new { @class = "form-control" })
        <br />
        <button class="btn btn-warning">Güncelle</button>
        <a style="background-color: crimson; color: white;" href="/Product/Index/" class="btn btn-default">Geri</a>
    </div>
}